<div class="d-flex justify-content-between align-items-center">
  <h1 class="text-center flex-grow-1">Lista de Productos</h1>
  <a href="/carts/{{cartId}}" class="ms-auto">
    <i class="bi bi-cart cart-icon"></i>
  </a>
</div>
<div class="container">
    <div class="row">
        {{#each productos}}
        <div class="col-xl-4 col-md-6 col-sm-12 mb-3"> 
            <div class="card">
                <img src="{{img}}" alt="" class="card-img-center" style="max-width: 80px; max-height: 250px; display: block; margin: auto;">
                <div class="card-body">
                    <h4 class="card-title"style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:20px; color:rgb(74, 56, 137)">{{wine}}</h4>
                    <p class="card-text">Viner√≠a: {{title}}</p>
                    <p class="card-text">Vino: {{description}}</p>
                    <p class="card-text">Price: ${{price}}</p>
                    <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
                        <button class="btnMios" type="submit">Agregar al Carrito</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<div class="pagination-container">
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}" class="pagination-link"> Anterior </a>
    {{/if}}
    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}" class="pagination-link"> Siguiente </a>
    {{/if}} 
    
</div>
<p style="color: rgb(255, 255, 255); text-align: center">Pagina {{currentPage}} de {{totalPages}} </p>